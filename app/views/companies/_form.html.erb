<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <br>
  <div class="col-md-10 col-md-push-3">
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="col-md-4">
          <p class=""> Nombre: </p>
        </div>
        <div class="col-md-8">
          <%= f.input :name, as: :string, label: false, :input_html => {:maxlength => 50}, :error => false %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="col-md-6 col-md-push-6">
      <%= f.button :submit, ( f.object.new_record? ? "Crear" : "Actualizar"), {class: 'btn btn-primary btn-block'} %>
    </div>
  </div>

<% end %>